
@{
    ViewBag.Title = "DashboardPage";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<!-- Dashboard Section -->
<div class="content-section active" id="dashboard">
    <h4 class="mb-4"><i class="fas fa-chart-line"></i> Thống Kê Tổng Quan</h4>
    <div class="row">
        <div class="col-md-3 col-sm-6 mb-3">
            <div class="stats-card">
                <div class="stats-icon" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                    <i class="fas fa-box"></i>
                </div>
                <h3>@ViewBag.TongSanPham</h3>
                <p class="text-muted mb-0">Tổng Sản Phẩm</p>
            </div>
        </div>
        <div class="col-md-3 col-sm-6 mb-3">
            <div class="stats-card">
                <div class="stats-icon" style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);">
                    <i class="fas fa-shopping-cart"></i>
                </div>
                <h3>@ViewBag.TongDonHang</h3>
                <p class="text-muted mb-0">Đơn Hàng Mới</p>
            </div>
        </div>
        <div class="col-md-3 col-sm-6 mb-3">
            <div class="stats-card">
                <div class="stats-icon" style="background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);">
                    <i class="fas fa-users"></i>
                </div>
                <h3>@ViewBag.TongKhachHang</h3>
                <p class="text-muted mb-0">Khách Hàng</p>
            </div>
        </div>
        <div class="col-md-3 col-sm-6 mb-3">
            <div class="stats-card">
                <div class="stats-icon" style="background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);">
                    <i class="fas fa-dollar-sign"></i>
                </div>
                <h3>@ViewBag.TongDoanhThu.ToString("N0")đ</h3>
                <p class="text-muted mb-0">Doanh Thu</p>
            </div>
        </div>
    </div>
</div>