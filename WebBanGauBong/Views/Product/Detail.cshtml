    <h2 style="font-weight:bold;" class="text-center">GỢI Ý SẢN PHẨM</h2>

    <h4 class="mt-4">
        <a href="@Url.Action("TimKiemTheoLoai", "Product", new {id = Loai.CategoryID})" style="text-decoration:none;" class="my-3 fw-bold link-index">
            GẤU BÔNG CÙNG LOẠI
        </a>
