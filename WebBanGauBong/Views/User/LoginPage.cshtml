
@{
    ViewBag.Title = "LoginPage";
}
<style>

    .container-login {
        position: relative;
        width: 850px;
        height: 800px;
        background: #fff;
        border-radius: 30px;
        box-shadow: 0 0 30px rgba(0, 0, 0, .2);
        margin: 20px;
        overflow: hidden;
        align-items: center;
    }

    .social-icons {
        display: flex;
        justify-content: center;
    }

    .container-login .form-box {
        position: absolute;
        right: 0;
        width: 50%;
        height: 100%;
        background: #fff;
        /*display: flex;*/
        align-items: center;
        color: #333;
        text-align: center;
        padding: 40px;
        z-index: 1;
        transition: .6s ease-in-out 1.2s, visibility 0s 1s;
    }

    .container-login.active .form-box {
        right: 50%;
    }

    .container-login .form-box.register {
        visibility: hidden;
    }

    .container-login.active .form-box.register {
        visibility: visible;
    }

    .container-login form {
        width: 100%;
    }

    .container-login h1 {
        font-size: 36px;
        margin: -10px 0;
    }

    .container-login .input-box {
        position: relative;
        margin: 30px 0;
    }

        .container-login .input-box input {
            width: 100%;
            padding: 13px 50px 13px 20px;
            background: #eee;
            border-radius: 8px;
            border: none;
            outline: none;
            font-size: 16px;
            color: #333;
            font-weight: 500;
        }

            .container-login .input-box input::placeholder {
                color: #888;
                font-weight: 400;
            }

        .container-login .input-box i {
            position: absolute;
            right: 20px;
            top: 50%;
            transform: translateY(-50%);
            font-size: 20px;
            color: #888;
        }


    .container-login .btn {
        width: 100%;
        height: 48px;
        background: #7494ec;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, .1);
        border: none;
        cursor: pointer;
        font-size: 16px;
        color: #fff;
        font-weight: 600;
    }

    .container-login p {
        font-size: 14.5px;
        margin: 15px 0;
    }

    .social-icons a {
        display: inline-flex;
        padding: 10px;
        border: 2px solid #ccc;
        border-radius: 8px;
        font-size: 24px;
        color: #333;
        text-decoration: none;
        margin: 0 8px;
    }

    .container-login .toggle-box {
        position: absolute;
        width: 100%;
        height: 100%;
    }

    .container-login.active .toggle-box::before {
        left: 50%;
    }

    .container-login .toggle-box::before {
        content: '';
        position: absolute;
        left: -250%;
        width: 300%;
        height: 100%;
        background: #7494ec;
        border-radius: 150px;
        z-index: 2;
        transition: 1.8s ease-in-out;
    }

    .container-login .toggle-panel {
        position: absolute;
        width: 50%;
        height: 100%;
        color: #fff;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        z-index: 2;
        transition: .6s ease-in-out;
    }

        .container-login .toggle-panel.toggle-left {
            left: 0;
            transition-delay: 1.2s;
        }

    .container-login.active .toggle-panel.toggle-left {
        left: -50%;
        transition-delay: .6s;
    }

    .container-login .toggle-panel.toggle-right {
        right: -50%;
        transition-delay: .6s;
    }

    .container-login.active .toggle-panel.toggle-right {
        right: 0px;
        transition-delay: 1.2s;
    }

    .container-login .toggle-panel p {
        margin-bottom: 20px;
    }

    .container-login .toggle-panel .btn {
        width: 160px;
        height: 46px;
        background: transparent;
        border: 2px solid #fff;
        box-shadow: none;
    }

    @@media screen and (max-width: 650px) {
        .container-login {
            height: calc(100vh - 40px);
        }

            .container-login .form-box {
                background: purple;
                bottom: 0;
                width: 100%;
                height: 70%;
            }

            .container-login.active .form-box {
                right: 0;
                bottom: 30%;
            }

            .container-login .toggle-box::before {
                width: 100%;
                left: 0;
                width: 100%;
                top: -270%;
                height: 300%;
                border-radius: 20vw;
            }

            .container-login.active .toggle-box::before {
                top: 70%;
                left: 0;
            }

            .container-login .toggle-panel {
                width: 100%;
                height: 30%;
            }

                .container-login .toggle-panel.toggle-left {
                    top: 0;
                }

            .container-login .container-login.active .toggle-panel.toggle-left {
                left: 0;
                top: -30px;
            }

            .container-login .toggle-panel.toggle-right {
                right: 0;
                bottom: -30%;
            }

            .container-login.active .toggle-panel.toggle-right {
                bottom: 0;
            }
    }

    @@media screen and (max-width: 400px) {
        .container-login .form-box {
            padding: 20px;
        }

        .container-login .toggle-panel h1 {
            font-size: 30px;
        }
    }

    .btnForgot {
        color: black;
        font-size: 15px;
        border: none;
        background-color: white;
        width: 150px;
    }

        .btnForgot:hover {
            color: purple;
        }
</style>

<center>
    <div class="container-login">
        <div class="form-box login" style="margin-top: 150px;">
            @using (Html.BeginForm("LoginOnSubmit", "User", FormMethod.Post))
            {
                <h1>Đăng nhập</h1>

                <div class="input-box">
                    <input type="email" placeholder="Email" name="email" required>
                    <i class='bxr  bx-user'></i>
                </div>
                <div class="input-box">
                    <input type="password" placeholder="Mật khẩu" name="password">
                    <i class='bxr  bx-lock'></i>
                </div>
                <div>
                    <button class="btnForgot mb-3"
                            formaction="@Url.Action("ForgotPassword", "User")" 
                            formnovalidate
                            type="submit">Quên mật khẩu</button>
                    @if (ViewBag.Message != null)
                {
                    <p class="text-color-theme" style="font-size: 14px">@ViewBag.Message</p>
                }
                </div>

                if (ViewBag.LoginError != null)
                {
                    <p class="text-danger fs-6">
                        <i class="bi bi-exclamation-triangle"></i>
                        @ViewBag.LoginError
                    </p>
                }
                <button type="submit" class="btn">Đăng nhập</button>
                <p>hoặc đăng nhập bằng</p>
                <div class="social-icons">
                    <a href="@Url.Action("LoginGoogle", "User")"><i class="bi bi-google"></i></a>
                    <a href="#"><i class="bi bi-facebook"></i></a>
                    <a href="@Url.Action("LoginGitHub", "User")"><i class="bi bi-github"></i></a>
                    <a href="#"><i class="bi bi-instagram"></i></a>
                </div>
                if (ViewBag.SocialLoginError != null)
                {
                    <p class="text-danger fs-6">
                        @ViewBag.SocialLoginError
                    </p>
                }
            }
        </div>


        <div class="form-box register">
            @using (Html.BeginForm("RegisterOnSubmit", "User", FormMethod.Post))
            {

                <h1>Đăng ký</h1>
                <div class="input-box">
                    <input type="text" placeholder="Tên người dùng" name="name" required>
                    <i class='bxr  bx-user'></i>
                </div>

                <div class="input-box">
                    <input type="text" placeholder="Số điện thoại" name="sdt" required>
                    <i class='bxr  bx-user'></i>
                </div>

                <div class="input-box">
                    <input type="email" placeholder="Email" name="email" required>
                    <i class='bxr  bx-envelope-alt'></i>
                </div>
                if (ViewBag.EmailError != null)
                {
                    <p class="text-danger fs-6">
                        <i class="bi bi-exclamation-triangle"></i> @ViewBag.EmailError
                    </p>
                }

                <div class="input-box">
                    <input type="password" placeholder="Mật khẩu" name="password1" required>
                    <i class='bxr  bx-lock'></i>
                    @if (ViewBag.PasswordError != null)
                    {
                        <p class="text-danger fs-6">
                            <i class="bi bi-exclamation-triangle"></i>
                            Mật khẩu không đạt yêu cầu <br />
                        </p>
                        <p style="color:#888; font-size: 14px;">
                            * Dài ít nhất 8 ký tự <br />
                            * Chứa chữ cái viết hoa hoặc thường <br />
                            * Chứa ký tự số <br />
                            * Chứa ký tự đặc biệt
                        </p>
                    }

                </div>

                <div class="input-box">
                    <input type="password" placeholder="Nhập lại mật khẩu" name="password2" required>
                    <i class='bxr  bx-lock'></i>
                    @if (ViewBag.PasswordConfirmationError != null)
                    {
                        <p class="text-danger fs-6">
                            @ViewBag.PasswordConfirmationError
                        </p>
                    }
                </div>

                <button type="submit" class="btn">Đăng ký</button>

                <p>hoặc đăng ký với</p>
                <div class="social-icons">
                    <a href="#"><i class="bi bi-google"></i></a>
                    <a href="#"><i class="bi bi-facebook"></i></a>
                    <a href="#"><i class="bi bi-github"></i></a>
                    <a href="#"><i class="bi bi-instagram"></i></a>
                </div>
            }
        </div>

        <div class="toggle-box">
            <div class="toggle-panel toggle-left">
                <h1>Hello, welcome</h1>
                <p>Don't have an account?</p>
                <button class="btn register-btn">Register</button>
            </div>

            <div class="toggle-panel toggle-right">
                <h1>Welcome Back!</h1>
                <p>Already have an account?</p>
                <button class="btn login-btn">Login</button>
            </div>

        </div>
    </div>


</center>

<script>
    const container = document.querySelector('.container-login');
    const registerBtn = document.querySelector('.register-btn');
    const loginBtn = document.querySelector('.login-btn');

    registerBtn.addEventListener('click', () => {
        container.classList.add('active');
    });

    loginBtn.addEventListener('click', () => {
        container.classList.remove('active');
    });

</script>

@if (TempData["RegisterError"] != null && (bool)TempData["RegisterError"] == true)
{
    <script>
        const containerReg = document.querySelector('.container-login');

        if (containerReg) {
            containerReg.classList.add('active');
        }
    </script>
}